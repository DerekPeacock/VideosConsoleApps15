@model double 
@using ConsoleAppProject.App02
@{
    ViewData["Title"] = "HealthMessage";
}

@{
    BmiCalculator bmi = new BmiCalculator();
    bmi.Index = Model;
}

<header class="jumbotron">
    <h1>BMI Health Message</h1>
    <h2>by Derek Peacock</h2>
</header>
<section>
    <h2>Your BMI Index</h2>
    <p class="text-lead">
        @bmi.GetHealthMessage()
    </p>
    <h2>BAME Message</h2>
    <p class="text-info">
        @bmi.GetBameMessage()
    </p>
</section>

