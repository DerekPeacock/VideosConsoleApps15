@model IEnumerable<StudentGradesMVC.Models.Student>

@{
    ViewData["Title"] = "Student List";
}

<h1>Student List</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Add Student</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mark)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mark)
            </td>
            <td>
                <a  class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@item.StudentId">Edit</a>
                <a  class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.StudentId">Details</a>
                <a  class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.StudentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
